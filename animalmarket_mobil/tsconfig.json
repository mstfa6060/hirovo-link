{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "common/animalmarket-api/src/config/*"
      ],
      "@services/*": [
        "common/animalmarket-api/src/services/*"
      ],
      "@api/*": [
        "common/animalmarket-api/src/api/*"
      ],
      "@errors/*": [
        "common/animalmarket-api/src/errors/*"
      ],
      "screens/*": [
        "screens/*"
      ],
      "components/*": [
        "components/*"
      ],
      "navigation/*": [
        "navigation/*"
      ],
      "src/*": [
        "src/*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "App.tsx",
    "src",
    "screens",
    "common"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/__mocks__/*"
  ]
}